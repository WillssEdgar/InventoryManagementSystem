<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Text text="Sign In" textAlignment="CENTER">
         <font>
            <Font size="29.0" />
         </font>
      </Text>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Text text="Username">
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
            <TextField fx:id="UsernameSignInInput" style="-fx-pref-width: 200;" />
            <Text text="Password">
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
            <PasswordField fx:id="PasswordSignInInput" style="-fx-pref-width: 200;" />
         </children>
      </VBox>
      <Button fx:id="SignInButton" style="-fx-pref-width: 175; -fx-pref-height: 25; -fx-background-color: rgb(83,144,254); -fx-background-radius: 20;" text="Sign In" textAlignment="CENTER" textFill="#fffbfb" />
      <Text text="Or Sign Up" textAlignment="CENTER" />
      <Button fx:id="CreateAccountButton" style="-fx-pref-width: 175; -fx-pref-height: 25; -fx-background-color: rgb(83,144,254); -fx-background-radius: 20;" text="Create An Account" textAlignment="CENTER" textFill="#fffbfb" />
   </children>
</VBox>






